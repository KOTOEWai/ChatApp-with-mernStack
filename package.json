{
  "name": "chatapp-fullstack",
  "version": "1.0.0",
  "scripts": {
    "dev": "concurrently \"npm run dev:fronted\" \"npm run dev:server\"",
    "dev:fronted": "cd fronted && npm run dev",
    "dev:server": "cd backend && npm run dev",
    "build": "cd fronted && npm run build",
    "start": "cd backend && npm start",
    "install-deps": "npm install && cd fronted && npm install && cd ../backend && npm install"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}